{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
  ],
  "headers": [
      {"source": "/src/serviceWorker.js", "headers": [{"key": "Cache-Control", "value": "no-cache"}]}
  ],
  "rewrites": [ {
      "source": "**",
      "destination": "/index.html"
    } ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ],
    "source": "functions"
  }
}
